<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.SL5"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ignore="http://www.ignore.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mye="clr-namespace:IxaCalc.Enums"
             Width="900"
             Height="600"
             DataContext="{Binding Main,
                                   Source={StaticResource Locator}}"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <ListBox Name="bushoList"
                 Width="176"
                 Height="543"
                 Margin="46,55,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding BushoList}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding SetDeckCommand}" CommandParameter="{Binding ElementName=bushoList, Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="20"
                               Height="20"
                               Source="{Binding Image}" />
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Name="stackPanel1" Margin="220,61,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <Button Margin="5"
                    Command="{Binding RemoveDeckCommand}"
                    CommandParameter="0"
                    Foreground="White"
                    Template="{StaticResource DeckCardButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Background="White">
                        <Image Width="80"
                               Height="100"
                               DataContext="{Binding Busho1}"
                               Source="{Binding Image}" />
                    </Border>
                    <StackPanel Grid.Column="1">
                        <StackPanel DataContext="{Binding Busho1}">
                            <TextBlock Foreground="#FF96FFFF" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Rarity}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="槍" />
                                <TextBlock Text="{Binding Lance}" />
                                <TextBlock Text="弓" />
                                <TextBlock Text="{Binding Bow}" />
                                <TextBlock Text="馬" />
                                <TextBlock Text="{Binding Horse}" />
                                <TextBlock Text="器" />
                                <TextBlock Text="{Binding Weapon}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="指揮兵数 : " />
                                <TextBlock Text="{Binding SoldierNumber}" />
                            </StackPanel>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="ステータス" />
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Attack.png" />
                                <TextBlock Text="{Binding Attack}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Defence.png" />
                                <TextBlock Text="{Binding Defence}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="統計" />
                            </Border>
                            <TextBlock Text="{Binding MainDeck.Percent[0]}" />
                            <TextBlock Text="{Binding MainDeck.ActualLeadership[0]}" />
                            <TextBlock Text="{Binding MainDeck.PerCost[0], StringFormat=\{0:F1\}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Button>
            <Button Margin="5"
                    Command="{Binding RemoveDeckCommand}"
                    CommandParameter="0"
                    Foreground="White"
                    Template="{StaticResource DeckCardButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Background="White">
                        <Image Width="80"
                               Height="100"
                               DataContext="{Binding Busho2}"
                               Source="{Binding Image}" />
                    </Border>
                    <StackPanel Grid.Column="1">
                        <StackPanel DataContext="{Binding Busho2}">
                            <TextBlock Foreground="#FF96FFFF" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Rarity}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="槍" />
                                <TextBlock Text="{Binding Lance}" />
                                <TextBlock Text="弓" />
                                <TextBlock Text="{Binding Bow}" />
                                <TextBlock Text="馬" />
                                <TextBlock Text="{Binding Horse}" />
                                <TextBlock Text="器" />
                                <TextBlock Text="{Binding Weapon}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="指揮兵数 : " />
                                <TextBlock Text="{Binding SoldierNumber}" />
                            </StackPanel>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="ステータス" />
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Attack.png" />
                                <TextBlock Text="{Binding Attack}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Defence.png" />
                                <TextBlock Text="{Binding Defence}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="統計" />
                            </Border>
                            <TextBlock Text="{Binding MainDeck.Percent[1]}" />
                            <TextBlock Text="{Binding MainDeck.ActualLeadership[1]}" />
                            <TextBlock Text="{Binding MainDeck.PerCost[1], StringFormat=\{0:F1\}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Button>
            <Button Margin="5"
                    Command="{Binding RemoveDeckCommand}"
                    CommandParameter="0"
                    Foreground="White"
                    Template="{StaticResource DeckCardButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Background="White">
                        <Image Width="80"
                               Height="100"
                               DataContext="{Binding Busho3}"
                               Source="{Binding Image}" />
                    </Border>
                    <StackPanel Grid.Column="1">
                        <StackPanel DataContext="{Binding Busho3}">
                            <TextBlock Foreground="#FF96FFFF" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Rarity}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="槍" />
                                <TextBlock Text="{Binding Lance}" />
                                <TextBlock Text="弓" />
                                <TextBlock Text="{Binding Bow}" />
                                <TextBlock Text="馬" />
                                <TextBlock Text="{Binding Horse}" />
                                <TextBlock Text="器" />
                                <TextBlock Text="{Binding Weapon}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="指揮兵数 : " />
                                <TextBlock Text="{Binding SoldierNumber}" />
                            </StackPanel>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="ステータス" />
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Attack.png" />
                                <TextBlock Text="{Binding Attack}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Defence.png" />
                                <TextBlock Text="{Binding Defence}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="統計" />
                            </Border>
                            <TextBlock Text="{Binding MainDeck.Percent[2]}" />
                            <TextBlock Text="{Binding MainDeck.ActualLeadership[2]}" />
                            <TextBlock Text="{Binding MainDeck.PerCost[2], StringFormat=\{0:F1\}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Button>
            <Button Margin="5"
                    Command="{Binding RemoveDeckCommand}"
                    CommandParameter="0"
                    Foreground="White"
                    Template="{StaticResource DeckCardButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Background="White">
                        <Image Width="80"
                               Height="100"
                               DataContext="{Binding Busho4}"
                               Source="{Binding Image}" />
                    </Border>
                    <StackPanel Grid.Column="1">
                        <StackPanel DataContext="{Binding Busho4}">
                            <TextBlock Foreground="#FF96FFFF" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Rarity}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="槍" />
                                <TextBlock Text="{Binding Lance}" />
                                <TextBlock Text="弓" />
                                <TextBlock Text="{Binding Bow}" />
                                <TextBlock Text="馬" />
                                <TextBlock Text="{Binding Horse}" />
                                <TextBlock Text="器" />
                                <TextBlock Text="{Binding Weapon}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="指揮兵数 : " />
                                <TextBlock Text="{Binding SoldierNumber}" />
                            </StackPanel>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="ステータス" />
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Attack.png" />
                                <TextBlock Text="{Binding Attack}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Defence.png" />
                                <TextBlock Text="{Binding Defence}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                            <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                                <TextBlock Text="統計" />
                            </Border>
                            <TextBlock Text="{Binding MainDeck.Percent[3]}" />
                            <TextBlock Text="{Binding MainDeck.ActualLeadership[3]}" />
                            <TextBlock Text="{Binding MainDeck.PerCost[3], StringFormat=\{0:F1\}}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>
        <TextBlock Name="textBlock1"
                   Width="216"
                   Height="25"
                   Margin="438,527,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding AllSoldierNumber}" />
        <TextBlock Name="deckCost"
                   Width="216"
                   Height="25"
                   Margin="438,489,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding MainDeck.TotalCost}" />
        <StackPanel Margin="0,0,0,50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Image Width="20"
                   Height="20"
                   Margin="2"
                   Source="Images/Attack.png" />
            <TextBlock Name="deckAtk"
                       Height="23"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FFB81C1C"
                       Text="{Binding MainDeck.TotalAttack}" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Image Width="20"
                   Height="20"
                   Margin="2"
                   Source="Images/Defence.png" />
            <TextBlock Name="dechDef"
                       Height="23"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FF1717B4"
                       Text="{Binding MainDeck.TotalDefence}" />
        </StackPanel>
        <StackPanel Name="rarityPanel" Margin="2,59,856,343">
            <RadioButton Name="ultraRare"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="天"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/UltraRare.png" />

            </RadioButton>
            <RadioButton Name="superRare"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="極"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/SuperRare.png" />
            </RadioButton>
            <RadioButton Name="rare"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="特"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Rare.png" />
            </RadioButton>
            <RadioButton Name="uncommon"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="上"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Uncommon.png" />

            </RadioButton>
            <RadioButton Name="common"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="序"
                         Template="{StaticResource ShortCutButton}">

                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Common.png" />
            </RadioButton>
        </StackPanel>
        <StackPanel Name="stackPanel2"
                    Width="Auto"
                    Height="50"
                    Margin="2,9,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Spear"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Spear.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="LongSpear"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/LongSpear.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Samurai"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Samurai.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Bow"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Bow.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="LongBow"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/LongBow.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="MountArcher"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/MountArcher.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Horse"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Horse.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="EliteHorse"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/EliteHorse.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="RedArms"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/RedArms.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Gun"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Gun.png" />
            </RadioButton>
            <RadioButton ClickMode="Press"
                         Command="{Binding ChangeSoldierCommand}"
                         CommandParameter="Dragoon"
                         Template="{StaticResource ShortCutButton}">
                <Image Width="40"
                       Height="40"
                       Margin="2"
                       Source="Images/Dragoon.png" />
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
