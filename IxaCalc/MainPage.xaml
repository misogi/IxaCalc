<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.SL5"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ignore="http://www.ignore.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              Width="900"
             Height="600"
             DataContext="{Binding Main,
                                   Source={StaticResource Locator}}"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <ListBox Name="bushoList"
                 Width="195"
                 Height="602"
                 Margin="190,-2,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding BushoList}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding SetDeckCommand}"
                                        CommandParameter="{Binding ElementName=bushoList,
                                                                   Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="24" Width="24" Source="{Binding Image}" />
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Name="stackPanel1"
                    Width="242"
                    Height="502"
                    Margin="480,98,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="0" />
                <StackPanel IsHitTestVisible="False">
                <TextBlock Text="{Binding MainDeck.Percent[0]}" />
                <TextBlock Text="{Binding MainDeck.ActualLeadership[0]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[0]}" />
                </StackPanel>
                <StackPanel Name="grid1" Orientation="Horizontal"
                      Width="200"
                      Height="100"
                      DataContext="{Binding Busho1}" IsHitTestVisible="False">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="1" />
                <StackPanel IsHitTestVisible="False">
                <TextBlock Text="{Binding MainDeck.Percent[1]}" />
                <TextBlock Text="{Binding MainDeck.ActualLeadership[1]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[1]}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Name="grid2"
                      Width="200"
                      Height="100"
                      IsHitTestVisible="False"
                      DataContext="{Binding Busho2}">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Background="AntiqueWhite">
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="2" />
                <StackPanel IsHitTestVisible="False">
                <TextBlock Text="{Binding MainDeck.Percent[2]}" />
                <TextBlock Text="{Binding MainDeck.ActualLeadership[2]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[2]}" />
                </StackPanel>
                <StackPanel Name="grid3" Orientation="Horizontal"
                      Width="200"
                      Height="100"
                      IsHitTestVisible="False"
                      DataContext="{Binding Busho3}">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="3" />
                <StackPanel IsHitTestVisible="False">
                    <TextBlock Text="{Binding MainDeck.Percent[3]}" />
                <TextBlock Text="{Binding MainDeck.ActualLeadership[3]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[3]}" />
                </StackPanel>
                <StackPanel  Name="grid4" Orientation="Horizontal"
                      Width="200"
                      Height="100"
                      IsHitTestVisible="False"
                      DataContext="{Binding Busho4}">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        <TextBlock Name="textBlock1"
                   Width="216"
                   Height="25"
                   Margin="480,27,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding AllSoldierNumber}" />
        <ListBox Height="414" HorizontalAlignment="Left" Margin="12,0,0,0" Name="soldierTypeList" VerticalAlignment="Top" Width="149" ItemsSource="{Binding SoldierTypes}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}"
                                        CommandParameter="{Binding ElementName=soldierTypeList,
                                                                   Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="715,30,0,0" Name="textBlock2" VerticalAlignment="Top" 
                   Text="{Binding MainDeck.TotalAttack}" />
        <StackPanel Name="rarityPanel" Margin="53,450,739,59">
            <RadioButton Content="天" Height="16" HorizontalAlignment="Left" Margin="0" Name="ultraRare" VerticalAlignment="Top" Command="{Binding ChangeRarityCommand}" CommandParameter="天" />
            <RadioButton Content="極" Height="16" HorizontalAlignment="Left" Margin="0" Name="superRare" VerticalAlignment="Top" Command="{Binding ChangeRarityCommand}" CommandParameter="極" />
            <RadioButton Content="特" Height="16" HorizontalAlignment="Left" Margin="0" Name="rare" VerticalAlignment="Top" Command="{Binding ChangeRarityCommand}" CommandParameter="特"  />
            <RadioButton Content="上" Height="16" HorizontalAlignment="Left" Margin="0" Name="uncommon" VerticalAlignment="Top" Command="{Binding ChangeRarityCommand}" CommandParameter="上" />
            <RadioButton Content="序" Height="16" HorizontalAlignment="Left" Margin="0" Name="common" VerticalAlignment="Top" Command="{Binding ChangeRarityCommand}" CommandParameter="序" />
        </StackPanel>
    </Grid>
</UserControl>
