<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.SL5"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ignore="http://www.ignore.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mye="clr-namespace:IxaCalc.Enums"
             Width="900"
             Height="600"
             DataContext="{Binding Main,
                                   Source={StaticResource Locator}}"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <ListBox Name="bushoList"
                 Width="195"
                 Height="543"
                 Margin="190,59,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding BushoList}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding SetDeckCommand}" CommandParameter="{Binding ElementName=bushoList, Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="20"
                               Height="20"
                               Source="{Binding Image}" />
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Name="stackPanel1"
                    Width="242"
                    Height="433"
                    Margin="589,9,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="0" />
                <StackPanel IsHitTestVisible="False">
                    <TextBlock Text="{Binding MainDeck.Percent[0]}" />
                    <TextBlock Text="{Binding MainDeck.ActualLeadership[0]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[0]}" />
                </StackPanel>
                <StackPanel Name="grid1"
                            Width="200"
                            Height="100"
                            DataContext="{Binding Busho1}"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="1" />
                <StackPanel IsHitTestVisible="False">
                    <TextBlock Text="{Binding MainDeck.Percent[1]}" />
                    <TextBlock Text="{Binding MainDeck.ActualLeadership[1]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[1]}" />
                </StackPanel>
                <StackPanel Name="grid2"
                            Width="200"
                            Height="100"
                            DataContext="{Binding Busho2}"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Background="AntiqueWhite">
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="2" />
                <StackPanel IsHitTestVisible="False">
                    <TextBlock Text="{Binding MainDeck.Percent[2]}" />
                    <TextBlock Text="{Binding MainDeck.ActualLeadership[2]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[2]}" />
                </StackPanel>
                <StackPanel Name="grid3"
                            Width="200"
                            Height="100"
                            DataContext="{Binding Busho3}"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="3" />
                <StackPanel IsHitTestVisible="False">
                    <TextBlock Text="{Binding MainDeck.Percent[3]}" />
                    <TextBlock Text="{Binding MainDeck.ActualLeadership[3]}" />
                    <TextBlock Text="{Binding MainDeck.PerCost[3]}" />
                </StackPanel>
                <StackPanel Name="grid4"
                            Width="200"
                            Height="100"
                            DataContext="{Binding Busho4}"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <Image Source="{Binding Image}" />
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="槍" />
                            <TextBlock Text="{Binding Lance}" />
                            <TextBlock Text="弓" />
                            <TextBlock Text="{Binding Bow}" />
                            <TextBlock Text="馬" />
                            <TextBlock Text="{Binding Horse}" />
                            <TextBlock Text="器" />
                            <TextBlock Text="{Binding Weapon}" />
                        </StackPanel>
                        <TextBlock Text="{Binding SoldierNumber}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        <TextBlock Name="textBlock1"
                   Width="216"
                   Height="25"
                   Margin="438,527,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding AllSoldierNumber}" />
        <TextBlock Name="deckCost"
                   Width="216"
                   Height="25"
                   Margin="438,489,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding MainDeck.TotalCost}" />
        <TextBlock Name="deckAtk"
                   Height="23"
                   Margin="0,30,0,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Text="{Binding MainDeck.TotalAttack}" FontSize="20" FontWeight="Bold" />
        <TextBlock Name="dechDef"
                   Height="23"
                   Margin="0,30,0,60"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Text="{Binding MainDeck.TotalDefence}" FontSize="20" FontWeight="Bold" />
        <StackPanel Name="rarityPanel" Margin="53,450,739,59">
            <RadioButton Name="ultraRare"
                         Height="16"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="天"
                         Content="天" />
            <RadioButton Name="superRare"
                         Height="16"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="極"
                         Content="極" />
            <RadioButton Name="rare"
                         Height="16"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="特"
                         Content="特" />
            <RadioButton Name="uncommon"
                         Height="16"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="上"
                         Content="上" />
            <RadioButton Name="common"
                         Height="16"
                         Margin="0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Command="{Binding ChangeRarityCommand}"
                         CommandParameter="序"
                         Content="序" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50" HorizontalAlignment="Left" Margin="2,9,0,0" Name="stackPanel2" VerticalAlignment="Top" Width="Auto" >
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Spear" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Spear.png" Margin="2"  />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="LongSpear" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/LongSpear.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Samurai" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Samurai.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Bow" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Bow.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="LongBow" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/LongBow.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="MountArcher" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/MountArcher.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Horse" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Horse.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="EliteHorse" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/EliteHorse.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="RedArms" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/RedArms.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Gun" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Gun.png" Margin="2" />
            </RadioButton>
            <RadioButton ClickMode="Press" Command="{Binding ChangeSoldierCommand}" CommandParameter="Dragoon" Template="{StaticResource ShortCutButton}">
                <Image Width="40" Height="40" Source="Images/Dragoon.png" Margin="2" />
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
