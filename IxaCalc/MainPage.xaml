<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com" xmlns:Emit="clr-namespace:System.Reflection.Emit;assembly=mscorlib"
             mc:Ignorable="d ignore"
             Height="600"
             Width="900"
             DataContext="{Binding Main, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <ListBox Height="132" HorizontalAlignment="Left" Margin="259,203,0,0" Name="listBox1" VerticalAlignment="Top" Width="128" ItemsSource="{Binding BushoList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Height="502" HorizontalAlignment="Left" Margin="480,98,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="242">
            <Grid Height="100" Name="grid1" Width="200" DataContext="{Binding Busho1}" />
            <Grid Height="100" Name="grid2" Width="200" DataContext="{Binding Busho2}" />
            <Grid Height="100" Name="grid3" Width="200" DataContext="{Binding Busho3}" />
            <Grid Height="100" Name="grid4" Width="200" DataContext="{Binding Busho4}" />
        </StackPanel>
    </Grid>
</UserControl>
