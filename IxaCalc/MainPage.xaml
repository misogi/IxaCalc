<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.SL5"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ignore="http://www.ignore.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="900"
             Height="600"
             DataContext="{Binding Main,
                                   Source={StaticResource Locator}}"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <ListBox Name="bushoList"
                 Width="128"
                 Height="132"
                 Margin="259,203,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding BushoList}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cmd:EventToCommand Command="{Binding SetDeckCommand}"
                                        CommandParameter="{Binding ElementName=bushoList,
                                                                   Path=SelectedItem}"
                                        PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Rarity}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Name="stackPanel1"
                    Width="242"
                    Height="502"
                    Margin="480,98,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="0" />
                <Grid Name="grid1"
                      Width="200"
                      Height="100"
                      DataContext="{Binding Busho1}" IsHitTestVisible="False">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Rarity}" />
                </Grid>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="1" />
                <Grid Name="grid2"
                      Width="200"
                      Height="100"
                      DataContext="{Binding Busho2}">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Rarity}" />
                </Grid>
            </Grid>
            <Grid Background="AntiqueWhite">
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="2" />
                <Grid Name="grid3"
                      Width="200"
                      Height="100"
                      DataContext="{Binding Busho3}">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Rarity}" />
                </Grid>
            </Grid>
            <Grid>
                <Button Command="{Binding RemoveDeckCommand}" CommandParameter="3" />
                <Grid Name="grid4"
                      Width="200"
                      Height="100"
                      DataContext="{Binding Busho4}">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Rarity}" />
                </Grid>
            </Grid>
        </StackPanel>
        <TextBlock Name="textBlock1"
                   Width="216"
                   Height="25"
                   Margin="377,36,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding AllSoldierNumber}" />
    </Grid>
</UserControl>
