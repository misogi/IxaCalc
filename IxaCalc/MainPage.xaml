<UserControl x:Class="IxaCalc.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.SL5"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ignore="http://www.ignore.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:my="clr-namespace:IxaCalc"
             xmlns:myc="clr-namespace:IxaCalc.Converters"
             xmlns:mye="clr-namespace:IxaCalc.Enums"
             x:Name="userControl"
             Width="900"
             Height="600"
             mc:Ignorable="d ignore">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
            </Style>
            <myc:RarityToCheckedConverter x:Key="rarityConverter" />
            <myc:SoldierTypeToCheckedConverter x:Key="soldierConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <ei:KeyTrigger Key="H">
            <ei:ChangePropertyAction PropertyName="Visibility" TargetName="helpLayer">
                <ei:ChangePropertyAction.Value>
                    <Visibility>Visible</Visibility>
                </ei:ChangePropertyAction.Value>
            </ei:ChangePropertyAction>
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="Escape">
            <ei:ChangePropertyAction PropertyName="Visibility" TargetName="helpLayer">
                <ei:ChangePropertyAction.Value>
                    <Visibility>Collapsed</Visibility>
                </ei:ChangePropertyAction.Value>
            </ei:ChangePropertyAction>
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D1">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Spear" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D2">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="LongSpear" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D3">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Samurai" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D4">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Bow" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D5">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="LongBow" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D6">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="MountArcher" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D7">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Horse" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D8">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="EliteHorse" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D9">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="RedArms" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="D0">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Gun" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="P">
            <cmd:EventToCommand Command="{Binding ChangeSoldierCommand}" CommandParameter="Dragoon" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="Delete">
            <cmd:EventToCommand Command="{Binding RemoveDeckCommand}" CommandParameter="-1" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="Q">
            <cmd:EventToCommand Command="{Binding ChangeRarityCommand}" CommandParameter="天" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="W">
            <cmd:EventToCommand Command="{Binding ChangeRarityCommand}" CommandParameter="極" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="E">
            <cmd:EventToCommand Command="{Binding ChangeRarityCommand}" CommandParameter="特" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="R">
            <cmd:EventToCommand Command="{Binding ChangeRarityCommand}" CommandParameter="上" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="T">
            <cmd:EventToCommand Command="{Binding ChangeRarityCommand}" CommandParameter="序" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="S">
            <ei:CallMethodAction MethodName="ToggleSoundButton" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="Up">
            <ei:CallMethodAction MethodName="ChangeBushoListSelectionUp" />
        </ei:KeyTrigger>
        <ei:KeyTrigger Key="Down">
            <ei:CallMethodAction MethodName="ChangeBushoListSelectionDown" />
        </ei:KeyTrigger>
    </i:Interaction.Triggers>

    <UserControl.DataContext>
        <Binding Path="Main" Source="{StaticResource Locator}" />
    </UserControl.DataContext>

    <Grid x:Name="LayoutRoot" Background="#FF494949">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.207*" />
            <ColumnDefinition Width="0.793*" />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="bushoList"
                 Margin="3,40,3,3"
                 VerticalAlignment="Stretch"
                 Background="#FF272727"
                 Foreground="White"
                 ItemsSource="{Binding BushoList}"
                 SelectionChanged="bushoList_SelectionChanged"
                 Template="{StaticResource BushoListBoxTemplate}">
            <i:Interaction.Triggers>
                <ei:KeyTrigger Key="Enter">
                    <cmd:EventToCommand Command="{Binding SetDeckCommand}" CommandParameter="{Binding SelectedItem, ElementName=bushoList}" />
                </ei:KeyTrigger>
                <ei:KeyTrigger Key="Right">
                    <cmd:EventToCommand Command="{Binding NextRarityCommand}" CommandParameter="{Binding SelectedIndex, ElementName=bushoList}" />
                </ei:KeyTrigger>
                <ei:KeyTrigger Key="Left">
                    <cmd:EventToCommand Command="{Binding PreviousRarityCommand}" CommandParameter="{Binding SelectedIndex, ElementName=bushoList}" />
                </ei:KeyTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="SelectionStates">
                                            <VisualState x:Name="SelectedUnfocused">
                                                <Storyboard>
                                                    <ColorAnimation d:IsOptimized="True"
                                                                    Duration="0"
                                                                    Storyboard.TargetName="grid"
                                                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                    To="#FFA3A3A3" />
                                                </Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="Unselected" />
                                            <VisualState x:Name="Selected">
                                                <Storyboard>
                                                    <ColorAnimation d:IsOptimized="True"
                                                                    Duration="0"
                                                                    Storyboard.TargetName="grid"
                                                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                    To="#FF939393" />
                                                </Storyboard>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <Grid x:Name="grid"
                                          Width="Auto"
                                          Height="Auto"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Background="Black"
                                          MouseLeftButtonDown="bushoList_MouseLeftButtonDown">
                                        <ContentPresenter />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>

                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Name="grid">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20"
                                   Height="20"
                                   Source="{Binding Image}" />
                            <TextBlock Name="bushoId" Text="{Binding Id}" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel x:Name="deckPanel"
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    VerticalAlignment="Top">
            <StackPanel x:Name="soldierType"
                        Width="Auto"
                        Height="57"
                        HorizontalAlignment="Left"
                        Background="#FF2F2F2F"
                        Orientation="Horizontal">
                <CheckBox x:Name="SpearButton"
                          ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Spear"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Spear,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="1"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Spear.png" />
                </CheckBox>
                <CheckBox x:Name="LongSpearButton"
                          ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="LongSpear"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=LongSpear,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="2"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/LongSpear.png" />
                </CheckBox>
                <CheckBox x:Name="SamuraiButton"
                          ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Samurai"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Samurai,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="3"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Samurai.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Bow"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Bow,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="4"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Bow.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="LongBow"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=LongBow,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="5"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/LongBow.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="MountArcher"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=MountArcher,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="6"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/MountArcher.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Horse"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Horse,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="7"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Horse.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="EliteHorse"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=EliteHorse,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="8"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/EliteHorse.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="RedArms"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=RedArms,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="9"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/RedArms.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Gun"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Gun,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="0"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Gun.png" />
                </CheckBox>
                <CheckBox ClickMode="Press"
                          Command="{Binding ChangeSoldierCommand}"
                          CommandParameter="Dragoon"
                          IsChecked="{Binding MainDeck.CurrentSoldierType,
                                              ConverterParameter=Dragoon,
                                              Converter={StaticResource soldierConverter},
                                              Mode=TwoWay}"
                          Tag="P"
                          Template="{StaticResource ShortCutButton}">
                    <Image Width="40"
                           Height="40"
                           Margin="2"
                           Source="Images/Dragoon.png" />
                </CheckBox>
            </StackPanel>
            <Grid Height="440">
                <StackPanel VerticalAlignment="Top"
                            Orientation="Horizontal"
                            Visibility="{Binding MainDeck.DeckedVisibility[0]}">
                    <Grid>
                        <my:DeckBushoView DataContext="{Binding MainDeck.DeckedBushos[0]}" />
                        <Button ClickMode="Press"
                                Command="{Binding RemoveDeckCommand}"
                                CommandParameter="0"
                                Opacity="0" />
                    </Grid>
                    <StackPanel>
                        <Button ClickMode="Press"
                                Command="{Binding RankUpCommand}"
                                CommandParameter="0"
                                Content="★↑"
                                Style="{StaticResource RankButtonStyle}" />
                        <Button ClickMode="Press"
                                Command="{Binding RankDownCommand}"
                                CommandParameter="0"
                                Content="★↓"
                                Style="{StaticResource RankButtonStyle}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,110,0,0"
                            VerticalAlignment="Top"
                            Orientation="Horizontal"
                            Visibility="{Binding MainDeck.DeckedVisibility[1]}">
                    <Grid>
                        <my:DeckBushoView DataContext="{Binding MainDeck.DeckedBushos[1]}" />
                        <Button ClickMode="Press"
                                Command="{Binding RemoveDeckCommand}"
                                CommandParameter="1"
                                Opacity="0" />
                    </Grid>
                    <StackPanel>
                        <Button ClickMode="Press"
                                Command="{Binding RankUpCommand}"
                                CommandParameter="1"
                                Content="★↑"
                                Style="{StaticResource RankButtonStyle}" />
                        <Button ClickMode="Press"
                                Command="{Binding RankDownCommand}"
                                CommandParameter="1"
                                Content="★↓"
                                Style="{StaticResource RankButtonStyle}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,0,0,110"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Visibility="{Binding MainDeck.DeckedVisibility[2]}">
                    <Grid>
                        <my:DeckBushoView DataContext="{Binding MainDeck.DeckedBushos[2]}" />
                        <Button ClickMode="Press"
                                Command="{Binding RemoveDeckCommand}"
                                CommandParameter="2"
                                Opacity="0" />
                    </Grid>
                    <StackPanel>
                        <Button ClickMode="Press"
                                Command="{Binding RankUpCommand}"
                                CommandParameter="2"
                                Content="★↑"
                                Style="{StaticResource RankButtonStyle}" />
                        <Button ClickMode="Press"
                                Command="{Binding RankDownCommand}"
                                CommandParameter="2"
                                Content="★↓"
                                Style="{StaticResource RankButtonStyle}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Visibility="{Binding MainDeck.DeckedVisibility[3]}">
                    <Grid>
                        <my:DeckBushoView DataContext="{Binding MainDeck.DeckedBushos[3]}" />
                        <Button ClickMode="Press"
                                Command="{Binding RemoveDeckCommand}"
                                CommandParameter="3"
                                Opacity="0" />
                    </Grid>
                    <StackPanel>
                        <Button ClickMode="Press"
                                Command="{Binding RankUpCommand}"
                                CommandParameter="3"
                                Content="★↑"
                                Style="{StaticResource RankButtonStyle}" />
                        <Button ClickMode="Press"
                                Command="{Binding RankDownCommand}"
                                CommandParameter="3"
                                Content="★↓"
                                Style="{StaticResource RankButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="resultGrid"
                  Height="100"
                  Background="#FF272727">
                <Grid Height="Auto" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>
                    <Border Grid.RowSpan="1"
                            Margin="0"
                            Background="#FF4D1111"
                            BorderThickness="1"
                            RenderTransformOrigin="1,0.5">
                        <Border.RenderTransform>
                            <CompositeTransform ScaleX="{Binding MainDeck.TotalAttackBar}" />
                        </Border.RenderTransform>
                    </Border>
                    <Border Grid.Row="1"
                            Grid.RowSpan="1"
                            Margin="0"
                            Background="#FF171635"
                            BorderThickness="1"
                            RenderTransformOrigin="1,0.5">
                        <Border.RenderTransform>
                            <CompositeTransform ScaleX="{Binding MainDeck.TotalDefenceBar}" />
                        </Border.RenderTransform>
                    </Border>
                </Grid>
                <StackPanel Orientation="Horizontal" d:LayoutOverrides="Height">
                    <StackPanel Width="96" Margin="180,5,23,5">
                        <Grid Height="16">
                            <TextBlock VerticalAlignment="Top"
                                       Text="総兵数 "
                                       TextWrapping="Wrap"
                                       d:LayoutOverrides="Width" />
                            <TextBlock x:Name="textBlock1"
                                       Margin="37,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Text="{Binding MainDeck.TotalSoldierNumber}"
                                       TextAlignment="Right" />
                        </Grid>
                        <Grid Height="16">
                            <TextBlock VerticalAlignment="Top"
                                       Text="総コスト"
                                       TextWrapping="Wrap" />
                            <TextBlock x:Name="deckCost"
                                       Margin="29,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Text="{Binding MainDeck.TotalCost}"
                                       TextAlignment="Right" />
                        </Grid>
                        <Grid Height="16">
                            <TextBlock VerticalAlignment="Center"
                                       Text="コス比"
                                       TextWrapping="Wrap"
                                       d:LayoutOverrides="Width, Height" />
                            <TextBlock Margin="0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding MainDeck.TotalSoldierNumberPerCost,
                                                      StringFormat=\{0:F1\}}" />
                        </Grid>
                        <TextBlock Margin="0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Text="{Binding MainDeck.CurrentSoldierTypeName}" />
                    </StackPanel>
                    <StackPanel x:Name="TotalAtk"
                                Width="126"
                                Margin="0,5,5,5"
                                HorizontalAlignment="Right">
                        <Grid Height="23">
                            <Image Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="Images/Attack.png" />
                            <TextBlock x:Name="deckAtk"
                                       Height="23"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="19"
                                       FontWeight="Bold"
                                       Foreground="#FFFF6767"
                                       Text="{Binding MainDeck.TotalAttack,
                                                      StringFormat=\{0:F1\}}"
                                       TextAlignment="Right" />
                        </Grid>
                        <Grid Height="16">
                            <TextBlock HorizontalAlignment="Left"
                                       Text="コス比"
                                       TextWrapping="Wrap"
                                       d:LayoutOverrides="Height" />
                            <TextBlock Margin="52,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Text="{Binding MainDeck.TotalAttackPerCost,
                                                      StringFormat=\{0:F1\}}"
                                       TextAlignment="Right" />
                        </Grid>
                    </StackPanel>
                    <StackPanel x:Name="TotalDef"
                                Width="137"
                                Margin="0,5,5,5"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                        <Grid>
                            <Image Width="23"
                                   Height="23"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="Images/Defence.png" />
                            <TextBlock x:Name="dechDef"
                                       Height="23"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="19"
                                       FontWeight="Bold"
                                       Foreground="#FF6B6BFF"
                                       Text="{Binding MainDeck.TotalDefence,
                                                      StringFormat=\{0:F1\}}"
                                       TextAlignment="Right" />
                        </Grid>
                        <Grid>
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="コス比"
                                       TextWrapping="Wrap" />
                            <TextBlock Margin="0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding MainDeck.TotalDefencePerCost,
                                                      StringFormat=\{0:F1\}}"
                                       TextAlignment="Right" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel x:Name="rarityPanel"
                    Margin="3,3,7,0"
                    VerticalAlignment="Top"
                    Background="#FF3B3B3B"
                    Orientation="Horizontal"
                    d:LayoutOverrides="Width">
            <CheckBox x:Name="ultraRare"
                      Width="35"
                      Margin="0"
                      VerticalAlignment="Top"
                      Command="{Binding ChangeRarityCommand}"
                      CommandParameter="天"
                      IsChecked="{Binding CurrentRarity,
                                          Mode=TwoWay,
                                          Converter={StaticResource rarityConverter},
                                          ConverterParameter=UltraRare}"
                      Tag="Q"
                      Template="{StaticResource RarityButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/UltraRare.png" />
            </CheckBox>
            <CheckBox x:Name="superRare"
                      Width="35"
                      Margin="0"
                      VerticalAlignment="Top"
                      Command="{Binding ChangeRarityCommand}"
                      CommandParameter="極"
                      IsChecked="{Binding CurrentRarity,
                                          Mode=TwoWay,
                                          Converter={StaticResource rarityConverter},
                                          ConverterParameter=SuperRare}"
                      Tag="W"
                      Template="{StaticResource RarityButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/SuperRare.png" />
            </CheckBox>
            <CheckBox x:Name="rare"
                      Width="35"
                      Margin="0"
                      VerticalAlignment="Top"
                      Command="{Binding ChangeRarityCommand}"
                      CommandParameter="特"
                      IsChecked="{Binding CurrentRarity,
                                          Mode=TwoWay,
                                          Converter={StaticResource rarityConverter},
                                          ConverterParameter=Rare}"
                      Tag="E"
                      Template="{StaticResource RarityButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Rare.png" />
            </CheckBox>
            <CheckBox x:Name="uncommon"
                      Width="35"
                      Margin="0"
                      VerticalAlignment="Top"
                      Command="{Binding ChangeRarityCommand}"
                      CommandParameter="上"
                      IsChecked="{Binding CurrentRarity,
                                          Mode=TwoWay,
                                          Converter={StaticResource rarityConverter},
                                          ConverterParameter=Uncommon}"
                      Tag="R"
                      Template="{StaticResource RarityButton}">
                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Uncommon.png" />

            </CheckBox>
            <CheckBox x:Name="common"
                      Width="35"
                      Margin="0"
                      VerticalAlignment="Top"
                      Command="{Binding ChangeRarityCommand}"
                      CommandParameter="序"
                      IsChecked="{Binding CurrentRarity,
                                          Mode=TwoWay,
                                          Converter={StaticResource rarityConverter},
                                          ConverterParameter=Common}"
                      Tag="T"
                      Template="{StaticResource RarityButton}">

                <Image Width="30"
                       Height="30"
                       Margin="2"
                       Source="Images/Common.png" />
            </CheckBox>
        </StackPanel>
        <Border Name="border1"
                Grid.Column="1"
                Width="70"
                Height="100"
                Margin="648,2,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#7A000000"
                BorderThickness="1"
                IsHitTestVisible="False">
            <TextBlock Name="textBlock2"
                       Margin="0"
                       TextWrapping="Wrap">
                Enter 追加
                <LineBreak />
                DEL 削除
                <LineBreak />
                H ヘルプ
                <LineBreak />
                S サウンド
                <LineBreak />

            </TextBlock>
        </Border>
        <Grid x:Name="helpLayer"
              Grid.ColumnSpan="2"
              Margin="0"
              Background="#97000000"
              Visibility="Collapsed">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <ei:ChangePropertyAction PropertyName="Visibility" TargetName="helpLayer">
                        <ei:ChangePropertyAction.Value>
                            <Visibility>Collapsed</Visibility>
                        </ei:ChangePropertyAction.Value>
