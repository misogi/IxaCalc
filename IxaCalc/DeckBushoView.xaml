<UserControl x:Class="IxaCalc.DeckBushoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Button Margin="5"
                    Command="{Binding RemoveDeckCommand}"
                    CommandParameter="0"
                    Foreground="White"
                    Template="{StaticResource DeckCardButton}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Background="White">
                <Image Width="80"
                               Height="100"
                               Source="{Binding OriginBusho.Image}" />
            </Border>
            <StackPanel Grid.Column="1">
                <StackPanel>
                    <TextBlock Foreground="#FF96FFFF" Text="{Binding OriginBusho.Name}" />
                    <TextBlock Text="{Binding OriginBusho.Rarity}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="槍" />
                        <TextBlock Text="{Binding OriginBusho.Lance}" />
                        <TextBlock Text="弓" />
                        <TextBlock Text="{Binding OriginBusho.Bow}" />
                        <TextBlock Text="馬" />
                        <TextBlock Text="{Binding OriginBusho.Horse}" />
                        <TextBlock Text="器" />
                        <TextBlock Text="{Binding OriginBusho.Weapon}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="指揮兵数 : " />
                        <TextBlock Text="{Binding OriginBusho.SoldierNumber}" />
                    </StackPanel>
                    <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                        <TextBlock Text="ステータス" />
                    </Border>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Attack.png" />
                        <TextBlock Text="{Binding ActualAttack}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16"
                                       Height="16"
                                       Margin="2"
                                       Source="Images/Defence.png" />
                        <TextBlock Text="{Binding ActualDefence}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2">
                    <Border BorderBrush="White"
                                    BorderThickness="0,0,0,1"
                                    Padding="2">
                        <TextBlock Text="統計" />
                    </Border>
                    <TextBlock Text="{Binding Percent}" />
                    <TextBlock Text="{Binding ActualLeadership}" />
                    <TextBlock Text="{Binding PerCost, StringFormat=\{0:F1\}}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Button>
</UserControl>
