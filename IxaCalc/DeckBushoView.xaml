<UserControl x:Class="IxaCalc.DeckBushoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myc="clr-namespace:IxaCalc.Converters"
             d:DesignHeight="100"
             d:DesignWidth="588"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <myc:RarityToBrushConverter x:Key="brushConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Height="100"
            Margin="5"
            Background="{Binding OriginBusho.Rarity, Converter={StaticResource brushConverter}}">
        <StackPanel Margin="0"
                    Orientation="Horizontal"
                    d:LayoutOverrides="Width">
            <Image Width="80"
                   Height="100"
                   Margin="0"
                   Source="{Binding OriginBusho.Image}"
                   d:LayoutOverrides="Width" />
            <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="12,5,0,5" Width="100">
                <TextBlock HorizontalAlignment="Left"
                           Foreground="#FF96FFFF"
                           Text="{Binding OriginBusho.Name}" FontSize="16"/>
                <StackPanel Orientation="Horizontal">
                    <Image Width="20"
                           Height="20"
                           Source="{Binding RarityImage}" />
                    <TextBlock HorizontalAlignment="Left" Text="{Binding OriginBusho.Cost}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="Lv.20 ★" />
                    <TextBlock HorizontalAlignment="Left" Text="{Binding Rank}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="12,5,0,5" d:LayoutOverrides="Height" Width="110">
                <StackPanel Orientation="Horizontal">
                    <Image Width="18"
                           Height="18"
                           Source="Images/LeadershipSpear.png" />
                    <TextBlock Text="{Binding OriginBusho.Lance}" />
                    <Image Width="18"
                           Height="18"
                           Source="Images/LeadershipBow.png" />
                    <TextBlock Text="{Binding OriginBusho.Bow}" />
                    <Image Width="18"
                           Height="18"
                           Source="Images/LeadershipHorse.png" />
                    <TextBlock Text="{Binding OriginBusho.Horse}" />
                    <Image Width="18"
                           Height="18"
                           Source="Images/LeadershipWeapon.png" />
                    <TextBlock Text="{Binding OriginBusho.Weapon}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Width="18"
                           Height="18"
                           Source="Images/SoldierNumber.png" />
                    <TextBlock Text="{Binding OriginBusho.SoldierNumber}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                	<TextBlock HorizontalAlignment="Left" Text="統率力 " FontSize="10" />
                	<TextBlock Foreground="#FF212121" Text="{Binding Percent}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="7"
                        VerticalAlignment="Top"
                        Background="White" Width="110">
                <StackPanel Orientation="Horizontal">
                	<Image Width="16"
                		Height="16"
                		Margin="2"
                		Source="Images/Attack.png" />
                	<TextBlock Text="{Binding BushoAttack}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="実指揮 " FontSize="10" />
                    <TextBlock Foreground="#FF212121" Text="{Binding ActualLeadershipAttack}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="コス比 " FontSize="10" />
                    <TextBlock Foreground="#FF212121" Text="{Binding PerCostAttack, StringFormat=\{0:F1\}}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="総攻撃 " FontSize="10" />
                    <TextBlock Foreground="#FF212121" Text="{Binding ActualAttack, StringFormat=\{0:F1\}}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="7,7,7,0"
            	VerticalAlignment="Top"
            	Background="White" Width="110">
            	<StackPanel Orientation="Horizontal">
            		<Image Width="16"
            			Height="16"
            			Margin="2"
            			Source="Images/Defence.png" />
            		<TextBlock Text="{Binding BushoDefence}" />
            	</StackPanel>
            	<StackPanel Orientation="Horizontal">
            		<TextBlock HorizontalAlignment="Left" Text="実指揮 " FontSize="10" />
            		<TextBlock Foreground="#FF212121" Text="{Binding ActualLeadershipDefence}" />
            	</StackPanel>
            	<StackPanel Orientation="Horizontal">
            		<TextBlock HorizontalAlignment="Left" Text="コス比 " FontSize="10" />
            		<TextBlock Foreground="#FF212121" Text="{Binding PerCostDefence, StringFormat=\{0:F1\}}" />
            	</StackPanel>
            	<StackPanel Orientation="Horizontal">
            		<TextBlock HorizontalAlignment="Left" Text="総防御 " FontSize="10" />
            		<TextBlock Foreground="#FF212121" Text="{Binding ActualDefence, StringFormat=\{0:F1\}}" />
            	</StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
